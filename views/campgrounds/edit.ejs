<% layout('layouts/boilerplate') %>

    <h1>Edit <%= campground.title %> campground</h1>

    <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Name</label>
            <input type="text" name="campground[title]" id="title" value="<%= campground.title %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location" value="<%= campground.location %>">
        </div>
        <button type="submit">Save changes</button>
    </form>
    <div>
        <a href="/campgrounds/<%= campground.id %>" rel="noopener noreferrer">Cancel</a>
    </div>
