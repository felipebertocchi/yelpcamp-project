<% layout('layouts/boilerplate') %>

    <h1>Add a new campground</h1>
    <div>
        <a href="/campgrounds" rel="noopener noreferrer">Back to campgrounds</a>
    </div>
    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Name</label>
            <input type="text" name="campground[title]" id="title">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="campground[location]" id="location">
        </div>
        <button type="submit">Add campground</button>
    </form>
