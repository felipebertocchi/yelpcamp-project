<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8">
        <%- include('./details/campground-card', { campground }) %>
    </div>
    <div class="col-4">
        <% if (campground.geometry && campground.geometry.coordinates.length > 0) { %>
            <%- include('./details/campground-map', { campground }) %>
        <% } %>
        <% if (currentUser) { %>
            <%- include('./details/review-form', { campground }) %>
        <% } %>
        <%- include('./details/reviews-section', { campground }) %>
    </div>
</div>
<div class="mb-3">
    <a href="/campgrounds" rel="noopener noreferrer" class="btn btn-secondary"><i class="bi bi-caret-left-fill"> </i>Back to campgrounds</a>
</div>
